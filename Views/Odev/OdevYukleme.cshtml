@using OdevToplamaProjesi.Entities
@{
    ViewBag.Title = "OdevYukleme";
    Layout = "~/Views/Shared/_OgrenciLayout.cshtml";
}
@model Odevler
@if (TempData["Mesaj"]!=null)
{
<div class="col-md-12">
    <div class="alert alert-warning">
        <i class="ti-user"></i> @TempData["Mesaj"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">×</span> </button>
    </div>
</div>

}

    <div class="card col-md-6">
        <div class="card-block">
            <h4 class="card-title">Ödev Açıklaması</h4>
            <div class="row">

                <div class="col-lg-12 col-md-12">
                    <div id="slimtest1">
                      <p>
                          @Model.OdevAciklamasi
                      </p>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="card col-md-6">
        
        <div class="card-block">
            <div class="form-horizontal" role="form">
                <div class="form-body">
                    <h3 class="box-title">Ödev Bilgisi</h3>
                    <hr class="m-t-0 m-b-40">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="control-label text-right col-md-3"><b>Ödev Adı:</b></label>
                                <div class="col-md-9">
                                    <p class="form-control-static"> @Model.OdevBasligi </p>
                                </div>
                            </div>
                        </div>
                        <!--/span-->
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="control-label text-right col-md-3"><b>Öğretmen:</b></label>
                                <div class="col-md-9">
                                    <p class="form-control-static"> @(Model.Dersler.Ogretmenler.OgretmenAdi+" "+ Model.Dersler.Ogretmenler.OgretmenSoyadi) </p>
                                </div>
                            </div>
                        </div>
                        <!--/span-->
                    </div>
                    <!--/row-->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="control-label text-right col-md-3"><b>Ödev Oluşturma Tarihi:</b></label>
                                <div class="col-md-9">
                                    <p class="form-control-static"> @Model.BaslangicTarihi </p>
                                </div>
                            </div>
                        </div>
                        <!--/span-->
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="control-label text-right col-md-3"><b>Son Teslim Tarihi</b></label>
                                <div class="col-md-9">
                                    <p class="form-control-static"> @Model.BitisTarihi </p>
                                </div>
                            </div>
                        </div>
                        <!--/span-->
                    </div>
                  
                 
                </div>
               
            </div>
        </div>
    </div>
<div class="card col-md-12">
    <div class="card-block">
        <form class="form-horizontal" role="form" id="yukleme" method="post" action="/Odev/OdevYukleme" enctype="multipart/form-data">
            <div class="form-body">
                <h3 class="box-title">Ödev Bilgisi</h3>
                <hr class="m-t-0 m-b-40">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="col-md-12">
                                <label>Dosya Yükleyiniz</label>
                                <input type="file" class="dropify" name="yuklenenDosya" id="yuklemeFile" data-odev-id="@Model.ID" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn btn-info" id="submitbtn"> <i class="fa fa-hourglass-start"></i> Yukleme Yap</button>
                                
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6"> </div>
                </div>
            </div>
                </form>
                </div>
            </div>
<script src="~/Scripts/jquery-3.0.0.min.js"></script>

