@using OdevToplamaProjesi.Entities
@{
    ViewBag.Title = "Profilim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ 
    Kullanicilar kullanici = (Kullanicilar)Session["Kullanici"];
}

    <!-- Column -->
    <div class="col-lg-4 col-xlg-3 col-md-5">
        <div class="card">
            <div class="card-block">
                <center class="m-t-30">
                    <img src="~/Content/Resimler/Ogretmen/@kullanici.Ogretmenler.OgretmenFotografi" class="img-circle" width="150" />
                    <h4 class="card-title m-t-10">@(kullanici.Ogretmenler.OgretmenAdi+" "+kullanici.Ogretmenler.OgretmenSoyadi)</h4>
                   
                    <div class="row text-center justify-content-md-center">
                        <div class="col-8"><a href="javascript:void(0)" class="link"><font class="font-medium">Ders Sayısı : </font> <font class="font-medium">@kullanici.Ogretmenler.Derslers.Count</font></a></div>
                       
                    </div>
                </center>
            </div>
            <div>
                <hr>
            </div>
            <div class="card-block">
                <small class="text-muted">E-Posta </small>
                <h6>@kullanici.EPosta</h6>
                
            </div>
        </div>
    </div>
    <!-- Column -->
    <!-- Column -->
    <div class="col-lg-8 col-xlg-9 col-md-7">
        <div class="card">
            <!-- Nav tabs -->
            @if (TempData["mesaj"] != null)
            {
                <div class="box bg-light-info">@TempData["mesaj"]</div>
            }
            <ul class="nav nav-tabs profile-tab" role="tablist">

                <li class="nav-item"> <a class="nav-link" data-toggle="tab" href="#settings" role="tab">Hesap Ayarları</a> </li>
            </ul>
            <!-- Tab panes -->
            <div class="tab-content">

                <div class="tab-pane active" id="settings" role="tabpanel">
                    <div class="card-block">
                        <form class="form-horizontal form-material" method="post" action="/Ogretmen/Profilim">
                            @Html.Hidden("id", kullanici.Ogretmenler.ID)
                            <div class="form-group">
                                <label class="col-md-12">Ad</label>
                                <div class="col-md-12">
                                    <input type="text" placeholder="@kullanici.Ogretmenler.OgretmenAdi" class="form-control form-control-line" name="ad">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12">Soyad</label>
                                <div class="col-md-12">
                                    <input type="text" placeholder="@kullanici.Ogretmenler.OgretmenSoyadi" class="form-control form-control-line" name="soyad">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="example-email" class="col-md-12">E-Posta</label>
                                <div class="col-md-12">
                                    <input type="email" placeholder="@kullanici.EPosta" class="form-control form-control-line" name="eposta">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12">Password</label>
                                <div class="col-md-12">
                                    <input type="password"  class="form-control form-control-line" name="sifre">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-12">
                                    <button type="submit" class="btn btn-success">Profil Güncelle</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Column -->

