
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="login-register" style="background-color:cornsilk">
    <div class="login-box card">
        <div class="card-block">
            <form class="form-horizontal form-material" id="loginform" action="/Login/Index" method="post">
                <h3 class="box-title m-b-20">Giriş Yapınız</h3>

                <div class="form-group ">
                    <div class="col-xs-12">
                        @if (TempData["mesaj"] != null)
                        {
                            <div class="box bg-light-info">@TempData["mesaj"]</div>
                        }
                        <input class="form-control" type="text" required="" placeholder="Kullanıcı Adı" name="kullaniciadi">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <input class="form-control" type="password" required="" placeholder="Şifre" name="sifre">
                    </div>
                </div>
                
                <div class="form-group text-center m-t-20">
                    <div class="col-xs-12">
                        <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Giriş</button>
                    </div>
                </div>

                <div class="form-group m-b-0">
                    <div class="col-sm-12 text-center">
                        <p>Hesabın yokmu? <a href="/Login/KayitOl" class="text-info m-l-5"><b>Kayıt Ol</b></a></p>
                    </div>
                </div>
            </form>
            <form class="form-horizontal" id="recoverform" action="/Login/SifreKurtar" method="post">
                <div class="form-group ">
                    <div class="col-xs-12">
                        <h3>Şifre Kurtarma</h3>
                        <p class="text-muted">Şifre Sıfırlama E-Postası İçin Mail Adresinizi Giriniz.  </p>
                    </div>
                </div>
                <div class="form-group ">
                    <div class="col-xs-12">
                        <input class="form-control" type="text" required="" placeholder="Email" name="email">
                    </div>
                </div>
                <div class="form-group text-center m-t-20">
                    <div class="col-xs-12">
                        <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Şifremi Kurtar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
