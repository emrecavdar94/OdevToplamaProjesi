
@{
    ViewBag.Title = "KayitOl";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


    <div class="login-box card">
        <div class="card-block">
            <form class="form-horizontal form-material" id="loginform" action="/Login/KayitOl" method="post" enctype="multipart/form-data">
                <h3 class="box-title m-b-20">Yeni Kayıt</h3>
                <div class="form-group">
                    <div class="col-xs-12">
                        <h5>Kayıt Türü</h5>
                        <select class="custom-select col-12" onchange="kayitTurFiltre(this);" id="kayitTuru" name="kayitturu">
                            <option selected value="1">Öğrenci</option>
                            <option value="2">Öğretmen</option>

                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <input class="form-control" type="text" id="ogrenciNumarasi" placeholder="Öğrenci Numarası" name="ogrenciNumarasi">
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-xs-12">
                        <input class="form-control" type="text" required="" placeholder="Ad" name="ad">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <input class="form-control" type="text" required="" placeholder="Soyad" name="soyad">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12">
                        <label>Your so fresh input file — Default version</label>
                        <input type="file" class="dropify" name="profilFotografi" />
                    </div>
                </div>
               
                <div class="form-group ">
                    <div class="col-xs-12">
                        <input class="form-control" type="text" required="" placeholder="Email" name="eposta">
                    </div>
                </div>
                <div class="form-group ">
                    <div class="col-xs-12">
                        <input class="form-control" type="text" required="" placeholder="Kullanıcı Adı" name="kullaniciadi">
                    </div>
                </div>
                <div class="form-group ">
                    <div class="col-xs-12">
                        <input class="form-control" type="password" required="" placeholder="Şifre" name="sifre">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <input class="form-control" type="password" required="" placeholder="Şifre Tekrarı" name="sifretekrari">
                    </div>
                </div>

                <div class="form-group text-center m-t-20">
                    <div class="col-xs-12">
                        <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Kayıt Ol</button>
                    </div>
                </div>
                <div class="form-group m-b-0">
                    <div class="col-sm-12 text-center">
                        <p>Hesabın Varmı ? <a href="/Login/Index" class="text-info m-l-5"><b>Giriş Yap</b></a></p>
                    </div>
                </div>
            </form>

        </div>
    </div>

 <script>
     $(document).ready(function () {
         // Basic
         $('.dropify').dropify();
     });
     function kayitTurFiltre(selectList) {
         if ($(selectList).val() == 1) {
             $("#ogrenciNumarasi").css('visibility', 'visible');
         }
         else {
             $("#ogrenciNumarasi").css('visibility', 'hidden');
         }
     }
 </script>